---
import type { CollectionEntry } from "astro:content";

interface Props {
    prevPost?: CollectionEntry<"blog"> | CollectionEntry<"zueg"> | null;
    nextPost?: CollectionEntry<"blog"> | CollectionEntry<"zueg"> | null;
    collection?: "blog" | "zueg";
}

const { prevPost, nextPost, collection = "blog" } = Astro.props;

function getUrl(post: CollectionEntry<"blog"> | CollectionEntry<"zueg">) {
    return post.collection === "zueg" ? `/posts/zueg/${post.id}` : `/posts/${post.id}`;
}
---

{(prevPost || nextPost) && (
    <nav class="post-nav" aria-label="文章导航">
        <div class="post-nav-item">
            {prevPost && (
                <a href={getUrl(prevPost)} class="post-nav-link">
                    <span class="post-nav-label">← 上一篇</span>
                    <span class="post-nav-title">{prevPost.data.title}</span>
                </a>
            )}
        </div>
        <div class="post-nav-item post-nav-next">
            {nextPost && (
                <a href={getUrl(nextPost)} class="post-nav-link">
                    <span class="post-nav-label">下一篇 →</span>
                    <span class="post-nav-title">{nextPost.data.title}</span>
                </a>
            )}
        </div>
    </nav>
)}

<style>
    .post-nav {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin: 3rem 0 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border);
    }

    .post-nav-item {
        min-width: 0;
    }

    .post-nav-next {
        text-align: right;
    }

    .post-nav-link {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        text-decoration: none;
        color: inherit;
    }

    .post-nav-label {
        font-size: 0.8125rem;
        color: var(--text-muted);
    }

    .post-nav-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: color 150ms ease;
    }

    .post-nav-link:hover .post-nav-title {
        color: var(--accent);
    }

    @media (max-width: 480px) {
        .post-nav {
            grid-template-columns: 1fr;
        }
        .post-nav-next {
            text-align: left;
        }
    }
</style>
