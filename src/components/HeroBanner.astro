---
// HeroBanner.astro - 主页大横幅组件
interface Props {
	imageUrl?: string;
	imageAlt?: string;
	imageSource?: string;
}

const { 
	imageUrl = "/images/hero-images/t1.svg",
	imageAlt = "Banner image",
	imageSource 
} = Astro.props;
---

<div class="hero-banner">
	<img 
		src={imageUrl} 
		alt={imageAlt}
		class="hero-banner-image"
	/>
	{imageSource && (
		<div class="image-credit">
			<a href={imageSource} target="_blank" rel="noopener noreferrer">
				图片来源
			</a>
		</div>
	)}
</div>

<style>
	.hero-banner {
		position: relative;
		width: 100%;
		height: 400px;
		overflow: hidden;
		border-radius: 0 0 20px 20px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.hero-banner-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.3s ease;
	}

	.hero-banner:hover .hero-banner-image {
		transform: scale(1.05);
	}

	.image-credit {
		position: absolute;
		bottom: 10px;
		right: 10px;
		background: rgba(0, 0, 0, 0.6);
		padding: 5px 10px;
		border-radius: 5px;
	}

	.image-credit a {
		color: white;
		text-decoration: none;
		font-size: 0.875rem;
	}

	.image-credit a:hover {
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.hero-banner {
			height: 250px;
		}
	}
</style>
