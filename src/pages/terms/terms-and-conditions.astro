---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../../consts";
import { getDefaultUiText } from "../../i18n/ui";
---

<BaseLayout title={`${getDefaultUiText("terms.conditionsTitle")} | ${SITE_TITLE}`}>
    <main>
        <div class="container policy-page">
            <nav class="breadcrumb" data-i18n-aria-label="post.breadcrumbAria" aria-label={getDefaultUiText("post.breadcrumbAria")}>
                <a href="/" data-i18n="common.home">{getDefaultUiText("common.home")}</a>
                <span class="breadcrumb-sep">/</span>
                <a href="/terms/list" data-i18n="terms.listTitle">{getDefaultUiText("terms.listTitle")}</a>
                <span class="breadcrumb-sep">/</span>
                <span data-i18n="terms.conditionsTitle">{getDefaultUiText("terms.conditionsTitle")}</span>
            </nav>

            <article class="policy-card">
                <header class="policy-head">
                    <h1 data-i18n="terms.conditionsTitle">{getDefaultUiText("terms.conditionsTitle")}</h1>
                    <p>
                        <span data-i18n="terms.updatedLabel">{getDefaultUiText("terms.updatedLabel")}</span>:
                        <span data-i18n="terms.effectiveDate">{getDefaultUiText("terms.effectiveDate")}</span>
                    </p>
                </header>
                <p class="policy-intro" data-i18n="terms.conditionsIntro">{getDefaultUiText("terms.conditionsIntro")}</p>

                <section class="policy-section">
                    <h2 data-i18n="terms.conditionsS1Title">{getDefaultUiText("terms.conditionsS1Title")}</h2>
                    <ul class="policy-list">
                        <li data-i18n="terms.conditionsS1Item1">{getDefaultUiText("terms.conditionsS1Item1")}</li>
                        <li data-i18n="terms.conditionsS1Item2">{getDefaultUiText("terms.conditionsS1Item2")}</li>
                        <li data-i18n="terms.conditionsS1Item3">{getDefaultUiText("terms.conditionsS1Item3")}</li>
                    </ul>
                </section>

                <section class="policy-section">
                    <h2 data-i18n="terms.conditionsS2Title">{getDefaultUiText("terms.conditionsS2Title")}</h2>
                    <ul class="policy-list">
                        <li data-i18n="terms.conditionsS2Item1">{getDefaultUiText("terms.conditionsS2Item1")}</li>
                        <li data-i18n="terms.conditionsS2Item2">{getDefaultUiText("terms.conditionsS2Item2")}</li>
                        <li data-i18n="terms.conditionsS2Item3">{getDefaultUiText("terms.conditionsS2Item3")}</li>
                    </ul>
                </section>

                <section class="policy-section">
                    <h2 data-i18n="terms.conditionsS3Title">{getDefaultUiText("terms.conditionsS3Title")}</h2>
                    <ul class="policy-list">
                        <li data-i18n="terms.conditionsS3Item1">{getDefaultUiText("terms.conditionsS3Item1")}</li>
                        <li data-i18n="terms.conditionsS3Item2">{getDefaultUiText("terms.conditionsS3Item2")}</li>
                        <li data-i18n="terms.conditionsS3Item3">{getDefaultUiText("terms.conditionsS3Item3")}</li>
                    </ul>
                </section>

                <section class="policy-section">
                    <h2 data-i18n="terms.conditionsS4Title">{getDefaultUiText("terms.conditionsS4Title")}</h2>
                    <ul class="policy-list">
                        <li data-i18n="terms.conditionsS4Item1">{getDefaultUiText("terms.conditionsS4Item1")}</li>
                        <li data-i18n="terms.conditionsS4Item2">{getDefaultUiText("terms.conditionsS4Item2")}</li>
                        <li data-i18n="terms.conditionsS4Item3">{getDefaultUiText("terms.conditionsS4Item3")}</li>
                    </ul>
                </section>

                <p class="policy-contact" data-i18n="terms.contact">{getDefaultUiText("terms.contact")}</p>
                <a href="/terms/list" class="policy-back" data-i18n="terms.backToList">{getDefaultUiText("terms.backToList")}</a>
            </article>
        </div>
    </main>
</BaseLayout>

<style>
    .policy-page {
        padding-top: 0.25rem;
    }

    .policy-card {
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 1.15rem;
        background: var(--bg-card);
    }

    .policy-head {
        margin-bottom: 0.8rem;
    }

    .policy-head h1 {
        margin: 0 0 0.35rem;
        font-size: clamp(1.4rem, 3vw, 1.75rem);
    }

    .policy-head p {
        margin: 0;
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .policy-card p {
        margin-bottom: 0.9rem;
    }

    .policy-intro {
        color: var(--text-muted);
    }

    .policy-section {
        margin-bottom: 1rem;
    }

    .policy-section h2 {
        margin: 0 0 0.45rem;
        font-size: 1.02rem;
    }

    .policy-list {
        margin: 0;
        padding-left: 1.2rem;
        color: var(--text-muted);
    }

    .policy-list li {
        margin-bottom: 0.45rem;
    }

    .policy-contact {
        margin-top: 0.2rem;
        color: var(--text-muted);
        font-size: 0.92rem;
    }

    .policy-back {
        display: inline-block;
        margin-top: 0.4rem;
        color: var(--accent);
        text-decoration: none;
    }

    .policy-back:hover {
        text-decoration: underline;
    }
</style>
